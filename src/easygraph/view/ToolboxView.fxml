<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easygraph.controller.ToolboxViewController">
   <children>
      <Pane id="speedSlider" fx:id="toolboxPane" prefHeight="674.0" prefWidth="200.0">
         <children>
            <VBox fx:id="vbox" layoutX="39.0" layoutY="31.0" spacing="14.0">
               <children>
                  <Button id="moveElementButton" mnemonicParsing="false" onAction="#handleSelectClick" prefHeight="50.0" prefWidth="123.0" text="move Element">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="file:resources/images/move.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button id="addVertexButton" layoutX="39.0" layoutY="23.0" mnemonicParsing="false" onAction="#handleAddVertexClick" prefHeight="50.0" prefWidth="123.0" text="add Vertex" textAlignment="JUSTIFY">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="file:resources/images/vertex.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button id="addEdgeButton" layoutX="39.0" layoutY="117.0" mnemonicParsing="false" onAction="#handleAddEdgeClick" prefHeight="50.0" prefWidth="123.0" text="add Edge " textAlignment="CENTER">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="file:resources/images/edge.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
               </children>
            </VBox>
            <Separator layoutX="-1.0" layoutY="236.0" prefHeight="3.0" prefWidth="200.0" />
            <Separator layoutX="-1.0" layoutY="356.0" prefHeight="3.0" prefWidth="200.0" />
            
            <ComboBox fx:id="methodsBox" layoutX="38.0" layoutY="275.0" prefHeight="50.0" prefWidth="123.0" promptText="Algorithm" />
            
            <Button id="playButton" layoutX="38.0" layoutY="384.0" mnemonicParsing="false" onAction="#handlePlayClick" prefHeight="50.0" prefWidth="55.0">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="file:resources/images/start.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button id="pauseButton" layoutX="108.0" layoutY="384.0" mnemonicParsing="false" onAction="#handlePauseClick" prefHeight="50.0" prefWidth="55.0">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="file:resources/images/pause.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button id="backwardButton" layoutX="38.0" layoutY="454.0" mnemonicParsing="false" onAction="#handleBackwardClick" prefHeight="50.0" prefWidth="55.0" textAlignment="RIGHT">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="file:resources/images/backward.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button id="forwardButton" layoutX="108.0" layoutY="454.0" mnemonicParsing="false" onAction="#handleForwardClick" prefHeight="50.0" prefWidth="55.0">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="file:resources/images/forward.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button id="resetButton" layoutX="38.0" layoutY="526.0" mnemonicParsing="false" onAction="#handleResetClick" prefHeight="50.0" prefWidth="123.0" textAlignment="CENTER">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="file:resources/images/reset.png" />
                     </image></ImageView>
               </graphic></Button>
            <Slider layoutX="39.0" layoutY="618.0" prefHeight="15.0" prefWidth="123.0" showTickLabels="true" showTickMarks="true" value="1.0" />
            <Text id="sliderText" layoutX="83.0" layoutY="615.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Speed" textAlignment="CENTER" />
         </children>
      </Pane>
   </children>
</AnchorPane>
